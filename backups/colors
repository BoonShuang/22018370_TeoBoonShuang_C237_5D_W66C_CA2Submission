// colors.js

function getProductTypeColor(productType) {
    switch (productType) {
        case 'cleanser':
            return 'primary';
        case 'toner':
            return 'secondary';
        case 'moisturizer':
            return 'success';
        case 'serum':
            return 'danger';
        case 'sunscreen':
            return 'warning';
        case 'mask':
            return 'info';
        default:
            return 'dark';
    }
}

module.exports = {
    getProductTypeColor
};

